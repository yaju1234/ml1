<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_toper"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="35dp"
            android:src="@drawable/return11"
            android:layout_height="25dp" />
        <ImageView
            android:layout_width="35dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/return1"
            android:layout_height="25dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_toper"
        android:layout_above="@+id/ll_bottom1"
        android:layout_margin="10dp"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/src_img"
                android:scaleType="centerInside"

                android:src="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/segment_img"
                android:scaleType="centerInside"
                android:tint="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>
    </LinearLayout>

   <LinearLayout
       android:id="@+id/ll_bottom1"
       android:layout_width="match_parent"
       android:layout_above="@id/ll_footer"
       android:weightSum="1"
       android:layout_height="80dp">
       <LinearLayout

           android:layout_width="0dp"
           android:gravity="center"
           android:layout_weight="0.49"
           android:orientation="vertical"
           android:layout_height="match_parent">
           <ImageView
               android:layout_width="30dp"
               android:src="@drawable/logo_orange"
               android:duplicateParentState="true"
               android:layout_height="30dp" />
           <TextView
               android:layout_width="wrap_content"
               android:text="Cut It"
               android:textSize="16sp"
               android:textColor="#FFC700"
               android:duplicateParentState="true"
               android:layout_height="wrap_content" />
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="0.02"
           android:gravity="center"

           android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="1dp"
               android:background="#FFC700"
               android:layout_marginTop="25dp"
               android:layout_marginBottom="25dp"
               android:layout_height="match_parent"></LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:gravity="center"
           android:layout_weight="0.49"
           android:orientation="vertical"
           android:layout_height="match_parent">
           <ImageView
               android:layout_width="30dp"
               android:src="@drawable/eraser"
               android:layout_height="30dp" />
           <TextView
               android:layout_width="wrap_content"
               android:text="Eraser"
               android:textSize="16sp"
               android:textColor="#FFFFFF"
               android:layout_height="wrap_content" />
       </LinearLayout>

   </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_footer"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="0dp"
            android:layout_weight="0.20"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="30dp"
                android:duplicateParentState="true"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_marginLeft="5dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.60"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:text="Cut It"
                android:textSize="20sp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="20dp"
                android:src="@drawable/information"
                android:layout_marginLeft="5dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_cut_it"
            android:layout_width="0dp"
            android:layout_weight="0.20"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/ic_check_black_24dp"
                android:layout_marginLeft="5dp"
                android:duplicateParentState="true"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>